{% for taskreport in tasksreport %}
<tr>
    <td>{{taskreport.id }}</td>
    <td>{{taskreport.category }}<br />{{taskreport.kind }}</td>
    <td><strong>{{taskreport.title }}</strong>
        <p>{{taskreport.content|nl2br }}</p></td>
    <td>
        <button type="button" class="btn btn-info btn-xs">Modifier</button>
        <button type="button" class="btn btn-danger btn-xs delete-element" id="element-{{taskreport.id }}" value="{{taskreport.id }}">Supprimer</button>   
    </td>
</tr>
{% else %}
<tr class="danger">
    <td colspan="4">{{'No_Tasks'|trans }}</td>
</tr>
{% endfor %}