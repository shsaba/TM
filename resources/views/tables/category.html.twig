{% for category in categories %}
<tr>
    <td>{{category.id }}</td>
    <td>{{category.category }}</td>
    <td>
        <button type="button" class="btn btn-info btn-xs">Modifier</button>
        <button type="button" class="btn btn-danger btn-xs">Supprimer</button>   
    </td>
</tr>
{% else %}
<tr>
    <td colspan="3">{{'No_category'|trans }}</td>
</tr>
{% endfor %}