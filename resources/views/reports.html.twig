{% extends 'layout.html.twig' %}

{% block content %}

<h1 id="{{ report.date }}">{{ 'Report_Of'|trans }} {{ report.date }}</h1>


<div class="row">
    <div class="col-lg-9">
        <div class="well bs-component">
            <form action="#" method="post" id="form-report" class="form-horizontal">
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary" id="valid_btn">{{'form_Edit'|trans}}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-lg-3">

        <div class="list-group">
            <a value="{{report.id}}" class="list-group-item" id="add-task-report">{{'Task_Add'|trans }}</a>
            <a id="mail-report-{{report.id}}" class="list-group-item">{{'ReportToMail'|trans }}</a>
            <a id="delete-report-{{report.id}}" class="list-group-item">{{'DeleteReport'|trans }}</a>
            <a href="#" class="list-group-item">Home <span class="badge">42</span></a>
        </div>     
    </div>
</div>

{{ render(app.request.baseUrl ~ '/add-task-for-report-' ~ report.id) }}


<h1>{{ 'TasksList'|trans }}</h1>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'Kind_Tasks'|trans }}<br />{{ 'Categories'|trans }}</th>
                    <th>{{ 'Task'|trans }}</th>
                    <th>{{ 'Settings_options'|trans }}</th>
                </tr>
            </thead>
    {{ render(app.request.baseUrl ~ '/get-task-for-report-' ~ report.id) }}
        </table>
    </div>
</div>

{% endblock %}