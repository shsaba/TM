{% extends 'layout.html.twig' %}

{% block content %}

<h1 id="{{ type }}">{{ 'Kinds_Tasks'|trans }}</h1>

<div class="row">
    <div class="col-lg-6">
        <div class="well bs-component">
            <form action="#" method="post" id="form-valida" class="form-horizontal">
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary" id="valid_btn">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div id="conent"></div>
    </div>

    <div class="col-lg-6">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'Kind_Tasks'|trans }}</th>
                    <th>{{ 'Categories'|trans }}</th>
                    <th>{{ 'Settings_options'|trans }}</th>
                </tr>
            </thead>
            {{ render(app.request.baseUrl ~ '/get-kindstasks') }}
        </table>
    </div>
</div>
{% endblock %}